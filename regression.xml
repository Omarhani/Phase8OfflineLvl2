<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression Test Suite" parallel="tests">
    <test verbose="2" name="Chrome" >
        <parameter name="browser" value="headlesschrome"></parameter>
        <classes>
            <class name="login.LoginTests">
<!--            One Test Case      -->
                <methods>
                    <include name="testSuccessfulLogin3"/>
                </methods>
            </class>
            <class name="login.LoginTests2">
<!--            One Test Case      -->
                <methods>
                    <exclude name="testSuccessfulLogin2"/>
                </methods>
            </class>
<!--            Three Test cases-->
            <class name="login.LoginTests3"/>
        </classes>
    </test>
    <test verbose="2" name="Firefox">
        <parameter name="browser" value="headlessFirefox"></parameter>
        <classes>
            <class name="login.LoginTests2">
                <methods>
                    <exclude name="testSuccessfulLogin2"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>